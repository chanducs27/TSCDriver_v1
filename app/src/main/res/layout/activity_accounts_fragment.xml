<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/imgcar_account" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:elevation="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgdriver"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/userphoto"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtDriverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/imgdriver"
            android:text="Jesse compton"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/txtEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDriverName"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgdriver"
            android:text="Edit Profile"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imgdriver"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnrwaybill"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgdriver"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    app:srcCompat="@drawable/imgwaybill" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Waybill" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrsettings"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgdriver"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image4V43iew12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    app:srcCompat="@drawable/imgsettings" />

                <TextView
                    android:id="@+id/text7V654iew24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Settings"
                   />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnrabout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgdriver"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageV43i3ew12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    app:srcCompat="@drawable/imgabout" />

                <TextView
                    android:id="@+id/t8extV654iew24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="About"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrhelp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgdriver"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ima2geV43iew12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    app:srcCompat="@drawable/imghelp" />

                <TextView
                    android:id="@+id/te4xtV654iew24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Help"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrlogout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imgdriver"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageV43iew12"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="1dp"
                    app:srcCompat="@drawable/imglogout" />

                <TextView
                    android:id="@+id/textV654iew24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Logout"
                   />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

